<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/neanderthal_property_padding_horizontal"
    android:paddingRight="@dimen/neanderthal_property_padding_horizontal"
    android:paddingTop="@dimen/neanderthal_property_padding_vertical"
    android:paddingBottom="@dimen/neanderthal_property_padding_vertical" >

    <TextView
        android:id="@+id/name"
        android:labelFor="@+id/nameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/neanderthal_name_field"
        tools:ignore="RtlHardcoded" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameValueLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <au.com.outware.neanderthal.util.widget.SingleTextChangedListenerEditText
            android:id="@+id/nameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textCapWords"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>